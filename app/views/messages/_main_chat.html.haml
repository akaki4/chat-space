.main-chat
  .main-chat__main-header
    .main-chat__main-header__left-box
      %p.main-chat__main-header__left-box__current-group
        = @group.name
      %p.main-chat__main-header__left-box__member-list
        Member : 
        - @group.users.each do |u|
          = u.name
    %p.main-chat__main-header__edit-btn
      =link_to 'Edit', edit_group_path(@group) , class: "main-chat__main-header__edit-btn__edit-link"
  .message-box
    = render @messages
  .main-chat__form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__text", placeholder: "type a message"
        .content
          = f.label :image, class: "content__image" do
            = icon('far', 'image')
            = f.file_field :image, class: "content__image__file"
      = f.submit 'Send', class: "submit-btn", value: "Send"